<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AddMeal">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="50dp"
        android:orientation="vertical">


        <ImageView

            android:id="@+id/iv_mealImage"
            android:layout_width="wrap_content"
            android:layout_height="218dp"
            android:scaleType="centerCrop"
            android:src="@drawable/image_not"

            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/meal_name"
            android:textSize="19sp"
            android:layout_marginTop="20dp"
            android:id="@+id/txt_meal_name"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/description"
            android:textSize="19sp"
            android:layout_marginTop="10dp"
            android:id="@+id/txt_meal_description"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Link"
            android:textSize="19sp"
            android:layout_marginTop="10dp"
            android:id="@+id/txt_meal_link"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="@string/select_image"
            android:textSize="22sp"
            android:layout_marginTop="20dp"
            android:textColor="#ffff"
            android:backgroundTint="@color/colorPrimary"
            android:onClick="btnSelectImage"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:backgroundTint="@color/colorPrimary"
            android:onClick="btnAddMeal"
            android:text="@string/add_meal"
            android:textColor="#ffff"
            android:textSize="22sp" />


    </LinearLayout>




    

</ScrollView>